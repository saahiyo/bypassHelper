{
  "manifest_version": 3,
  "name": "bypassHelper",
  "version": "1.1.0",
  "description": "Automatically detects link shorteners, skips intermediate pages, removes overlays, and blocks known ad networks.",

  "icons": {
    "16": "icon16.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://arolinks.com/*",
        "*://*.arolinks.com/*",
        "*://web.urllinkshort.in/*",
        "*://shortxlinks.com/*",
        "*://open.nowshort.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "host_permissions": ["<all_urls>"],

  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "adblock_rules",
        "enabled": true,
        "path": "rules/adblock.json"
      }
    ]
  }
}
