{
  "manifest_version": 3,
  "name": "bypassHelper",
  "version": "1.1.0",
  "description": "Automatically detects link shorteners, skips intermediate pages, removes overlays, and blocks known ad networks.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "adblock_rules",
        "enabled": true,
        "path": "rules/adblock.json"
      }
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "go-to-bottom": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Scroll to bottom of page"
    },
    "go-to-top": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Scroll to top of page"
    }
  }
}